<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:padding="5dp"
    android:background="@color/darkBar_color"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/num_and_price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@+id/company_name"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/part_in_portfolio"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@+id/company_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/total_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/total_price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/company_name"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/diff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@id/total_price"
        app:layout_constraintTop_toBottomOf="@id/total_price"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>